<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    tools:context=".NGO_Home">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05">
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.075">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/Menu"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:text="Welcome"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/themeText"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/themeText"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/username"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:weightSum="11">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:weightSum="1.2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/FoodDonationRequest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/curved_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="Food\nDonation\nRequest"
                            android:textColor="@color/themeText"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/curved_square"
                            android:id="@+id/MoneyReceived"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="Money\nDonations\nReceived"
                            android:textColor="@color/themeText"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:weightSum="1.2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/AcceptedRequest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/curved_square" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="Accepted\nRequest"
                            android:textColor="@color/themeText"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeButton1"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025"/>

            <!--            <ImageView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="0.2"-->
            <!--                android:src="@drawable/emptyprofile"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:id="@+id/ProfilePic"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:src="@drawable/emptyprofile"
                android:layout_gravity="center"
                android:id="@+id/ProfilePic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Profile"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/Profile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Settings"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/Settings"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Donation History"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/DonationHistory"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="About\n'Project Zero Hunger'"
                android:textSize="20dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/About_PZH"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Our Team"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/OurTeam"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Contact Us"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/ContactUS"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:text="Sign Out"
                android:textSize="25dp"
                android:textColor="@color/themeText"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/SignOut"/>
            <!--            Drawer-->

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>